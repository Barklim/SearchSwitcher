{
	"manifest_version": 3,
	"name": "SearchSwitcher",
	"version": "0.01",
	"version_name": "0.1 beta",
	"short_name": "SSwitcher",
	"description": "Switch search engine in browser. Enjoy \uD83D\uDE80",
	"minimum_chrome_version": "107",
	"author": "kliment.barkalov@gmail.com",
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"js/lib/jquery-3.5.1.min.js",
				"js/app/content.js",
				"js/lib/utils.js"
			],
			"css": [
				"css/darkly-bootswatch.css"
			]
		}
	],
	"web_accessible_resources": [{
 		"resources": [
			"lib/jquery.min.3.5.1.js",
			"js/lib/jwt-decode.min.js",
			"js/lib/utils.js"
		],
 		"matches": [],
 		"extension_ids": []
	}],
	"background": {
		"service_worker": "js/app/background.js",
		"type": "module"
	},
	"action": {
		"default_popup": "views/popup.html"
	},
	"host_permissions": [
		"http://*/*",
		"https://*/*"
	],
	"permissions": [
		"storage",
		"webRequest",
		"activeTab",
		"tabs"
	],
	"icons": {
		"16": "./assets/logo16.png",
		"48": "./assets/logo48.png",
		"128": "./assets/logo128.png"
	}
}